<!-- Loop over each object in the projects array -->
{{#each posts as |post| }}
<div class="row mb-4">
  <div class="col-md-10">
    <h2>
      <a href="/post/{{post.id}}">{{post.title}}</a>
    </h2>

    <p>Created by {{post.User.username}} on {{format_date post.date_created}}</p>
  </div>
  <div class="col-md-10">
    <p>
      {{post.body}}
    </p>
  </div>
</div>
{{/each}}