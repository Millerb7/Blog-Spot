<div class="row">
  <div class="col-md-6">
    <h2>Login</h2>
    <form class="form login-form p-4">
      <div class="form-group">
        <label for="username-login">username:</label><br>
        <input class="form-input" type="text" id="username-login" />
      </div>
      <div class="form-group">
        <label for="password-login">password:</label><br>
        <input class="form-input" type="password" id="password-login" />
      </div>
      <div class="form-group">
        <a href="/"><button class="btn" type="submit">login</button></a>
      </div>
    </form>
  </div>
  <div class="col-md-6">
  <h2>Sign Up!</h2>
  <form class="form signup-form m-4 p-4">
    <div class="form-group">
        <label for="username-signup">username:</label><br>
        <input class="form-input" type="text" id="username-signup" />
      </div>
      <div class="form-group">
        <label for="password-signup">password:</label><br>
        <input class="form-input" type="password" id="password-signup" />
      </div>
      <div class="form-group">
        <a href="/"><button class="btn" type="submit">signup</button></a>
      </div>
  </form>
  </div>
</div>
<script src="/js/login.js"></script>